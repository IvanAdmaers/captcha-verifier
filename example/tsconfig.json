    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["../dist", "./src/"],
  "exclude": ["src/**/*.test.ts"]
}